{
  "name": "r3gardless.dev",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "R3gardless <pidaoh@g.skku.edu>",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:storybook": "vitest --project storybook",
    "test:unit:run": "vitest run --project unit",
    "test:storybook:run": "vitest run --project storybook",
    "lint": "eslint --fix \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint:check": "eslint --cache \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "types:check": "tsc --noEmit",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.tsx": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typewriter-effect": "^2.22.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-onboarding": "^9.0.12",
    "@storybook/addon-vitest": "^9.0.12",
    "@storybook/builder-vite": "^9.0.12",
    "@storybook/nextjs-vite": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^9.0.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "storybook": "^9.0.12",
    "styled-jsx": "^5.1.7",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite-plugin-storybook-nextjs": "^2.0.1",
    "vitest": "^3.1.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}